{
  "name": "book-a-meal",
  "version": "1.0.0",
  "description": "Book-A-Meal is an application that allows customers to make food orders and helps the food vendor know what the customers want to eat.",
  "main": "index.js",
  "scripts": {
    "start": "node ./server/dist/app.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --exec babel-node ./server/src/app.js",
    "build": "cross-env NODE_ENV=development babel ./server/src -d ./server/dist",
    "pretest": "npm run lint",
    "lint": "eslint **/*.js --fix",
    "coverage": "cat ./server/coverage/lcov.info | coveralls",
    "test": "cross-env NODE_ENV=test nyc mocha server/tests/test.js --recursive --timeout 30000",
    "test:watch": "cross-env NODE_ENV=test mocha server/tests/test.js --recursive --timeout 30000 --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmygozi/Book-A-Meal.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/emmygozi/Book-A-Meal/issues"
  },
  "homepage": "https://github.com/emmygozi/Book-A-Meal#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "express": "^4.16.3",
    "joi": "^13.2.0",
    "mocha": "^5.1.1",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.6.1",
    "istanbul": "^0.4.5",
    "nodemon": "^1.17.3",
    "nyc": "^11.7.1",
    "supertest": "^3.0.0"
  }
}
